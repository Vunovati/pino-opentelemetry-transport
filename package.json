{
  "name": "pino-opentelemetry-transport",
  "version": "0.1.0",
  "description": "OpenTelemetry transport for Pino",
  "main": "pino-opentelemetry-transport.js",
  "scripts": {
    "prepare": "husky install",
    "validate-and-test": "standard | snazzy && tap test/*.test.js --coverage-report=lcovonly && tsd",
    "test": "npm run validate-and-test || npm run posttest",
    "pretest": "touch otlp-logs.log && docker-compose up -d",
    "posttest": "docker-compose down && rm otlp-logs.log"
  },
  "author": "Vladimir Adamic <vladimir.adamic@nearform.com>",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api-logs": "^0.39.1",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.39.1",
    "@opentelemetry/sdk-logs": "^0.39.1",
    "pino-abstract-transport": "^1.0.0"
  },
  "types": "./pino-opentelemetry-transport.d.ts",
  "devDependencies": {
    "@types/node": "^17.0.0",
    "husky": "^7.0.0",
    "pino": "^7.9.2",
    "pino-pretty": "^7.6.0",
    "require-inject": "^1.4.4",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "tap": "^16.0.0",
    "tsd": "^0.20.0"
  },
  "standard": {
    "ignore": [
      "node_modules/"
    ]
  },
  "tsd": {
    "directory": "./test/types"
  }
}
