{
  "name": "pino-opentelemetry-transport",
  "version": "0.1.0",
  "description": "OpenTelemetry transport for Pino",
  "main": "pino-opentelemetry-transport.js",
  "scripts": {
    "validate-and-test": "standard | snazzy && tap test/*.test.js --branches=60 --coverage-report=lcovonly && tsd",
    "test": "npm run validate-and-test",
    "test-ci": "standard | snazzy && tap test/otlp-logger.test.js --branches=60 --coverage-report=lcovonly && tsd",
    "pretest": "npm run docker-run",
    "posttest": "npm run docker-kill",
    "docker-run": "docker run --volume=$(pwd)/otel-collector-config.yaml:/etc/otel-collector-config.yaml:rw --volume=/tmp/test-logs:/etc/test-logs:rw -p 4317:4317 -d otel/opentelemetry-collector-contrib:latest --config=/etc/otel-collector-config.yaml",
    "docker-kill": "docker kill $(docker ps -qf expose=4317) || echo 'No running docker container with port 4317 exposed'"
  },
  "author": "Vladimir Adamic <vladimir.adamic@nearform.com>",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api-logs": "^0.41.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.41.0",
    "@opentelemetry/sdk-logs": "^0.41.0",
    "pino-abstract-transport": "^1.0.0"
  },
  "types": "./pino-opentelemetry-transport.d.ts",
  "devDependencies": {
    "@fastify/pre-commit": "^2.0.2",
    "@types/node": "^20.4.8",
    "pino": "^8.14.1",
    "require-inject": "^1.4.4",
    "snazzy": "^9.0.0",
    "standard": "^17.1.0",
    "tap": "^16.0.0",
    "tsd": "^0.28.1"
  },
  "standard": {
    "ignore": [
      "node_modules/"
    ]
  },
  "tsd": {
    "directory": "./test/types"
  },
  "pre-commit": [
    "test"
  ]
}
